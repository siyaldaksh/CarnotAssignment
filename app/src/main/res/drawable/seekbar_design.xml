<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background" android:gravity="center_vertical">
        <shape android:shape="rectangle" android:tint="@color/black">
            <size android:height="4dp"/>
            <corners android:bottomRightRadius="4dp" android:topRightRadius="4dp" android:bottomLeftRadius="4dp" android:topLeftRadius="4dp"/>
        </shape>
    </item>
    <item android:id="@android:id/progress" android:gravity="center_vertical">
        <shape android:shape="rectangle" android:tint="@color/black">
            <size android:height="4dp"/>
            <corners android:bottomRightRadius="4dp" android:topRightRadius="4dp" android:bottomLeftRadius="4dp" android:topLeftRadius="4dp"/>
        </shape>
    </item>
</layer-list>